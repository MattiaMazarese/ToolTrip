<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principale dell'app -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colori principali -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#388E3C</item>
        <item name="colorSecondary">#2196F3</item>
        <item name="android:colorBackground">#F5F5F5</item>
    </style>

    <!-- Stile per i titoli -->
    <style name="TitleText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#4CAF50</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Stile per il testo principale -->
    <style name="BodyText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <!-- Stile per i pulsanti -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#4CAF50</item>
        <item name="android:textColor">#FFFFFF</item>
    <!--<item name="android:cornerRadius">8dp</item>-->
</style>

<style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:backgroundTint">#F5F5F5</item>
    <item name="android:textColor">#424242</item>
    <!--<item name="android:cornerRadius">8dp</item>-->
</style>

<!-- Stile per le card -->
    <style name="CardStyle">
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>
