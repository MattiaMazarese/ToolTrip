<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Messaggi di altri utenti -->
    <LinearLayout
        android:id="@+id/layoutMessageOther"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Nome del mittente -->
        <TextView
            android:id="@+id/textViewSenderNameOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_message_other"
            android:padding="10dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- I tuoi messaggi -->
    <LinearLayout
        android:id="@+id/layoutMessageSelf"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Nome del mittente (facoltativo, solo per debug) -->
        <TextView
            android:id="@+id/textViewSenderNameSelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewMessageSelf"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_message_self"
            android:padding="10dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textViewTimestampSelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
