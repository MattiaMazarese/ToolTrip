<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nome -->
        <EditText
            android:id="@+id/etNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            style="@style/BodyText"
            android:inputType="text" />

        <!-- Cognome -->
        <EditText
            android:id="@+id/etCognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cognome"
            style="@style/BodyText"
            android:inputType="text" />

        <!-- Anno di nascita -->
        <EditText
            android:id="@+id/etAnnoNascita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Anno di Nascita"
            style="@style/BodyText"
            android:inputType="number" />

        <!-- Numero di telefono -->
        <EditText
            android:id="@+id/etNumTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero di Telefono"
            style="@style/BodyText"
            android:inputType="phone" />

        <!-- Campi per l'indirizzo -->
        <EditText
            android:id="@+id/etCittà"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Città"
            style="@style/BodyText"
            android:inputType="text" />

        <EditText
            android:id="@+id/etVia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Via"
            style="@style/BodyText"
            android:inputType="text" />

        <EditText
            android:id="@+id/etCivico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Civico"
            style="@style/BodyText"
            android:inputType="text" />

        <EditText
            android:id="@+id/etCAP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CAP"
            style="@style/BodyText"
            android:inputType="number" />

        <EditText
            android:id="@+id/etProvincia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Provincia"
            style="@style/BodyText"
            android:inputType="text" />

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            style="@style/BodyText"
            android:inputType="textEmailAddress" />

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            style="@style/BodyText"
            android:inputType="textPassword" />

        <!-- Bottone di Registrazione -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrati"
            style="@style/ButtonPrimary"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
