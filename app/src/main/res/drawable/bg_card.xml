<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ombra -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- Colore semi-trasparente per l'ombra -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Card principale -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Colore bianco per lo sfondo -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
